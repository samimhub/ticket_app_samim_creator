{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/page.jsx", "src/app/layout.jsx", "src/app/TicketPage/[id]/page.jsx", "src/app/api/Tickets/router.ts", "src/app/(component)/TicketForm.jsx", "src/app/(component)/TicketCard.jsx", "src/app/(component)/StatusDisplay.jsx", "src/app/(component)/ProgressDisplay.jsx", "src/app/(component)/PriorityDisplay.jsx", "src/app/(component)/Nav.jsx", "src/app/(component)/DlectBlock.jsx"],
  "exclude": ["node_modules"]
}
